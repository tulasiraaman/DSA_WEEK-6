class Solution {
    public int calculate(String s) {
        Stack<Integer> st = new Stack<>();
        int result = 0,num = 0, sign = 1;

        for (int i = 0; i < s.length(); i++) {
            char ch = s.charAt(i);

            // If the character is a digit, build the number
            if (Character.isDigit(ch)) {
                num = num * 10 + (ch - '0');
            } 
            else if (ch == '+' || ch == '-') {
                result += sign * num;  // apply the last sign to num
                num = 0;               // reset num
                sign = (ch == '-') ? -1 : 1;              
            } 
            // If we encounter '(', push current state onto stack
            else if (ch == '(') {
                st.push(result);       // save current result
                st.push(sign);         // save current sign
                result = 0;            // reset result for inner expression
                sign = 1;              // reset sign
            } 
            // If we encounter ')', resolve the inner expression
            else if (ch == ')') {
                result += sign * num;  // finish the inner expression
                num = 0;
                result *= st.pop();    // apply the sign before '('
                result += st.pop();    // add the result before '('
            }
        }
        // Add any remaining number after the loop ends
        result += sign * num;
        return result;
    }
}
